if __name__== '__main__':
    def logfile():
        print("which file did you want to open\n press 1 for hemanth and 2 for harika and 3 for ananya")
        b = int(input())
        if b == 1:
            c = int(input("which file did you want to log is it diet or exercise\n press 1 for diet and 2 for exercise\n"))
            if c == 1:
                f1 = open("hemanth diet", "a")
                d = input("give the input for the file")
                f1.write(d[0:])
                print("thanks for using the services of hemanth's1 health management system")
            else:
                f2 = open("hemanth exercise", "a")
                d = input("give the input for the file")
                f2.write(d[0:])
                print("thanks for using the services of hemanth's1 health management system")
        elif b == 2:
