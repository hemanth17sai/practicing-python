    def retrieve():
        e = int(input("give the no.of file you want to retrieve\n press 1 for hemanth and 2 for harika and 3 for ananya\n"))
        if e == 1:
        f = int(input("which file you want to retrieve \n press 1 for diet and 2 for exercise"))
        if f == 1:
            f7 = open("hemanth diet")
            print(f7.readlines())

        if f == 2:
            f8 = open("hemanth exercise")
            print(f8.readlines())


        elif e==2:
            f = int(input("which file you want to retrieve \n press 1 for diet and 2 for exercise\n"))
            if f == 1:
                f9 = open("harika diet")
                print(f9.readlines())

            if f == 2:
                f8 = open("harika exercise ")
